/* pages/infect/infect.wxss */
.viewData {
  margin-top: 20rpx;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
}

.viewItemData {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.name {
  margin: 0 0 8rpx 0;
  font-size: 30rpx;
}

.data {
  font-size: 40rpx;
  font-weight: 700;
}

.yseterday {
  font-size: 20rpx;
  color: rgb(170, 170, 170);
}

.totalConfirmed>.data {
  color: #da0202;
}

.nowConfirmed>.data {
  color: #fa0202;
}

.totalDeath>.data {
  color: #040404;
}

.todayConfirmed>.data {
  color: #fa3535;
}

.view-tisp-text {
  margin-top: 30rpx;
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 80rpx 0 30rpx;
  background: linear-gradient(to top, #6f6f6f, #ababab);
  border-radius: 0 40rpx 0 0;
  font-size: 36rpx;
  font-weight: 700;
  color: #fff;
}

.echart_plane {
  height: 800rpx;
  margin: 20rpx 0;
}

.table {
  display: table;
  width: 100%;
}

.table-tr {
  display: table-row;
  height: 92rpx;
}

.table-tr:nth-child(odd) {
  background-color: #f6f6f6;
}


.table-th {
  display: table-cell;
  font-weight: bold;
  text-align: center;
  vertical-align: middle;
}

.table-td {
  display: table-cell;
  text-align: center;
  vertical-align: middle;
}