/* pages/flight/flight.wxss */
.view-tisp-text {
  margin-top: 30rpx;
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 80rpx 0 30rpx;
  background: linear-gradient(to top, #6f6f6f, #ababab);
  border-radius: 0 40rpx 0 0;
  font-size: 36rpx;
  font-weight: 700;
  color: #fff;
}

.inputSearch {
  display: flex;
  flex-direction: column;
  justify-content:center;
  align-items:center;
  flex:1;
}

.van-button--info {
  margin-left: 156rpx;
}


.table {
  display: table;
  width: 100%;
}

.table-tr {
  display: table-row;
  height: 92rpx;
}

.table-tr:nth-child(odd) {
  background-color: #f6f6f6;
}


.table-th {
  display: table-cell;
  font-weight: bold;
  text-align: center;
  vertical-align: middle;
}

.table-td {
  display: table-cell;
  text-align: center;
  vertical-align: middle;
}

.linkinfect {
  margin: 40rpx;
  display:flex;
  flex-direction: row;
  justify-content: center;
  align-items:center;
}

.linknone text {
  font-size:24rpx; 
}

.link text {
  font-size:24rpx; 
  color:#00A6F2
}